{% extends 'base.html.twig' %}

{% block title %} Nos Produits {% endblock %}

{% block content %}

    <h1>Nos produits</h1>

    <div class="row product-container">
        {% for product in products %}
            <div class="col-md-4">
                <div class="product-item text-center">
                    <a href="{{ path('product', { slug: product.slug }) }}">
                        <img class="img-fluid" src="/uploads/Products/{{ product.illustration }}" alt="Image du produit : {{ product.name }}">
                    </a>
                    <h5>{{ product.name }}</h5>
                    <span class="product-sub d-block">{{ product.subtitle }}</span>
                    <span class="product-price">{{ (product.price / 100)|number_format(2, ',', '.') }} â‚¬</span>
                </div>
            </div>
        {% endfor %}
    </div>

{% endblock %}
